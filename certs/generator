/usr/local/opt/libressl/bin/openssl req -x509 -nodes -days 825 -newkey rsa:4096 \
    -addext "subjectAltName = DNS:serveris.local.com" \
    -addext "extendedKeyUsage = serverAuth" \
    -keyout serveris.local.key -out serveris.local.crt


