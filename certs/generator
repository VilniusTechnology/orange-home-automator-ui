1234

openssl genrsa -des3 -out serveris.local.rootCA.key 2048

openssl req -x509 -new -nodes -key serveris.local.rootCA.key -sha256 -days 825 -out serveris.local.rootCA.pem

openssl req -new -nodes -out serveris.local.serveris.csr -newkey rsa:2048 -keyout serveris.local.serveris.key

openssl x509 -req -in serveris.local.server.csr -CA serveris.local.rootCA.pem -CAkey serveris.local.rootCA.key -CAcreateserial -out serveris.local.server.crt -days 825 -sha256 -extfile v3.ext

========================================

authorityKeyIdentifier=keyid,issuer
basicConstraints=CA:FALSE
keyUsage = digitalSignature, nonRepudiation, keyEncipherment, dataEncipherment
subjectAltName = @alt_names
[alt_names]
DNS.1 = serveris.local


------------------------------------------

1234

openssl genrsa -des3 -out universal.local.rootCA.key 2048

openssl req -x509 -new -nodes -key universal.local.rootCA.key -sha256 -days 825 -out universal.local.rootCA.pem

openssl req -new -nodes -out universal.local.server.csr -newkey rsa:2048 -keyout universal.local.server.key

openssl x509 -req -in universal.local.server.csr -CA automator.local.rootCA.pem -CAkey universal.local.rootCA.key -CAcreateserial -out universal.local.server.crt -days 825 -sha256 -extfile v3.ext

